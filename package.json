{
  "name": "semantic-live",
  "displayName": "semantic-live",
  "description": "semantic previewer",
  "publisher": "keshan",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "html",
    "css",
    "js",
    "preview",
    "vscode"
  ],
  "activationEvents": [
    "*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/keshann93/semantic-live"
  },
  "bugs": {
    "url": "https://github.com/keshann93/semantic-live/issues"
  },
  "license": "MIT",
  "icon": "icons/marketplace.png",
  "galleryBanner": {
    "color": "#111111",
    "theme": "dark"
  },
  "main": "./out/extension/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "semantic.showPanel",
        "title": "Toggle Semantic panel",
        "icon": {
          "dark": "./icons/icon-light.png",
          "light": "./icons/icon-dark.png"
        }
      }
    ],
    "colors": [
      {
        "id": "semantic.background",
        "description": "Semantic Live panel backgroudn",
        "defaults": {
          "dark": "#111111",
          "light": "#FFFFFF",
          "highContrast": "#491d1d"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == html",
          "command": "semantic.showPanel",
          "alt": "semantic.showPanel",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run build",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "build": "rimraf out && yarn compile",
    "package-ext": "vsce package",
    "publish-ext": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.47.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.26",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.26.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0",
    "all-contributors-cli": "^6.6.1",
    "husky": "^2.3.0",
    "prettier": "1.17.1",
    "pretty-quick": "^1.11.0",
    "rimraf": "^2.6.3"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
