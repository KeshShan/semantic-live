{
  "name": "semantic-live",
  "displayName": "semantic-live",
  "description": "semantic previewer",
  "publisher": "keshan",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.44.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Raathigesh/fabulous.git"
  },
  "icon": "icons/marketplace.png",
  "galleryBanner": {
    "color": "#111111",
    "theme": "dark"
  },
  "preview": true,
  "main": "./out/extension/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "semantic-live.showPreviewer",
        "title": "Toggle Semantic-live previewer",
        "icon": {
          "dark": "./icons/icon-light.png",
          "light": "./icons/icon-dark.png"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == html",
          "command": "semantic-live.showPreviewer",
          "alt": "semantic-live.showPreviewer",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run build",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./src/extension --project ./tsconfig.json",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "ui": "webpack-dev-server --env.development --config ./webpack.config.js",
    "build-ui": "webpack --env.production --config ./webpack.config.js",
    "build": "rimraf out && yarn compile && yarn build-ui",
    "package-ext": "vsce package",
    "publish-ext": "vsce publish"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/babel-traverse": "^6.25.5",
    "@types/chai": "^4.1.7",
    "@types/parse5": "^5.0.0",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-select": "^3.0.12",
    "@types/rebass": "^4.0.5",
    "@types/styled-components": "5.1.0",
    "@types/styled-system": "^5.1.5",
    "@types/vscode": "^1.45.1",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "all-contributors-cli": "^6.6.1",
    "babel-loader": "^8.0.5",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "css-loader": "^2.1.1",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-template": "^6.2.0",
    "husky": "^4.2.5",
    "mocha-typescript": "^1.1.17",
    "prettier": "1.17.1",
    "pretty-quick": "^2.0.1",
    "react": "^16.8.6",
    "react-color": "^2.17.2",
    "react-dom": "^16.8.6",
    "react-feather": "^2.0.8",
    "react-select": "^2.4.3",
    "react-tippy": "^1.2.3",
    "rimraf": "^3.0.2",
    "style-loader": "^1.2.1",
    "styled-components": "^4.2.0",
    "styled-system": "^5.1.5",
    "vscode": "^1.1.28",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.11.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.33.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "@babel/traverse": "^7.4.3",
    "parse5": "^6.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
